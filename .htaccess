# Configuração para WampServer - Permitir acesso a imagens
RewriteEngine On

# Permitir acesso direto a arquivos de imagem
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_FILENAME} \.(jpg|jpeg|png|gif|webp|svg)$ [NC]
RewriteRule . - [L]

# Permitir acesso à pasta uploads
RewriteCond %{REQUEST_URI} ^/uploads/
RewriteRule . - [L]

# Configurações de cache para imagens (opcional)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
</IfModule>

# Permitir acesso a tipos de arquivo específicos
<FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|css|js)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Configurações de segurança para uploads
<Directory "uploads">
    Options -Indexes
    AllowOverride None
    Order allow,deny
    Allow from all
    
    # Permitir apenas arquivos de imagem
    <FilesMatch "\.(php|phtml|php3|php4|php5|pl|py|jsp|asp|sh|cgi)$">
        Order deny,allow
        Deny from all
    </FilesMatch>
</Directory>